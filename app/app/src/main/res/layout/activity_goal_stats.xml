<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GoalStatsActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight"
        android:textColor="#444444"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.153"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.156" />

    <SeekBar
        android:id="@+id/currentWeight_seekBar"
        style="@android:style/Widget.DeviceDefault.Light.SeekBar"
        android:layout_width="344dp"
        android:layout_height="45dp"
        android:layout_marginBottom="356dp"
        android:max="180"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/currentWeight_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Current Weight"
        android:textColor="#9E9E9E"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/currentWeight_seekBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.18"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/currentWeight_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Goal Weight"
        android:textColor="#9E9E9E"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/goalWeight_seekBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.169"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/currentWeight_text"
        android:layout_width="128dp"
        android:layout_height="47dp"
        android:text="70"
        android:textAlignment="textEnd"
        android:textColor="@color/hint"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/currentWeight_seekBar"
        app:layout_constraintEnd_toStartOf="@+id/textView9"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/currentWeight_text2" />

    <TextView
        android:id="@+id/goalWeight_text"
        android:layout_width="128dp"
        android:layout_height="47dp"
        android:text="70"
        android:textAlignment="textEnd"
        android:textColor="@color/hint"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/goalWeight_seekBar"
        app:layout_constraintEnd_toStartOf="@+id/textView7"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/currentWeight_text3" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="33dp"
        android:layout_height="22dp"
        android:layout_marginEnd="36dp"
        android:paddingLeft="5dp"
        android:text="KG"
        android:textColor="@color/hint"
        app:layout_constraintBottom_toBottomOf="@+id/currentWeight_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/currentWeight_text"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="33dp"
        android:layout_height="22dp"
        android:layout_marginEnd="40dp"
        android:paddingLeft="5dp"
        android:text="KG"
        android:textColor="@color/hint"
        app:layout_constraintBottom_toBottomOf="@+id/goalWeight_text"
        app:layout_constraintEnd_toEndOf="parent" />

    <SeekBar
        android:id="@+id/goalWeight_seekBar"
        style="@android:style/Widget.DeviceDefault.Light.SeekBar"
        android:layout_width="344dp"
        android:layout_height="45dp"
        android:layout_marginBottom="188dp"
        android:max="180"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/next_stage_button"
        style="@style/main_button"
        android:layout_width="415dp"
        android:layout_height="71dp"
        android:drawableRight="@drawable/ic_arrow_forward_white_24dp"
        android:onClick="nextStage"
        android:paddingLeft="50dp"
        android:paddingRight="25dp"
        android:text="Continue to next step"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Creating a new goal"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.16"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 / 3"
        android:textColor="@color/hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>